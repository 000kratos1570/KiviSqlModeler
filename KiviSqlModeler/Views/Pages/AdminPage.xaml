<ui:UiPage x:Class="KiviSqlModeler.Views.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:KiviSqlModeler.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage"
      d:Background="{DynamicResource ApplicationBackgroundBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgProfile"
                  CanUserAddRows="False"
                  Margin="20,20,20,100"
                  SelectionChanged="dgProfile_SelectionChanged"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Почта"
                                    Binding="{Binding email}"
                                    Width="1*" />
                <DataGridTextColumn Header="Роль"
                                    Binding="{Binding Dolgnost}"
                                    Width="1*" />

            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnAdd"
                Content="Добавить"
                VerticalAlignment="Bottom"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Margin="20,0,0,40"
                Click="btnAdd_Click"/>
        <Button x:Name="btnUpdate"
                Content="Изменить"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="120,0,0,40"
                Grid.Column="1"
                Click="btnUpdate_Click" />
        <Button x:Name="btnDel"
                Content="Удалить"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Grid.Column="1"
                Margin="220,0,0,40"
                Click="btnDel_Click" />

        <Button x:Name="btnEx"
                Content="Выйти"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Grid.Column="1"
                Margin="0,10,20,0"
                Click="btnEx_Click" />

        <ui:TextBox x:Name="tbEmail"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Grid.Column="1"
                    Margin="0,100,0,0"
                    MinWidth="200"
                    PlaceholderText="Почта" />
        
        <ui:TextBox x:Name="tbPass"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Grid.Column="1"
                    Margin="0,150,0,0"
                    MinWidth="200"
                    PlaceholderText="Пароль" />

        <ComboBox x:Name="cbDolgnost"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Grid.Column="1"
                    Margin="0,200,0,0"
                    MinWidth="200"/>
    </Grid>
</ui:UiPage>
